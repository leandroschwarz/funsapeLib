	"version": "0.2.0",
	"configurations": [
		{
			"name": "STM32 Cortex Debug 1",
			"cwd":  "${workspaceRoot}",
			"executable": "./build/application.elf",
			"type": "cortex-debug",
			"request": "launch",
			"servertype": "openocd",
			
			"interface": "swd",
			"device": "STM32F103C8T6",
			"runToMain": true,
			"configFiles": [
				"interface/stlink.cfg",
				"target/stm32f1x.cfg"
			],
			"svdFile": "C:/Program Files/toolchains/SVD_STM32/STM32F103.svd",
			"preLaunchTask": "STM32 compile/program",
		},
		{
			"name": "STM32 Cortex Debug 2",
			"cwd":  "${workspaceRoot}",
			"executable": "./build/application.elf",
			"type": "cortex-debug",
			"request": "launch",
			"servertype": "openocd",
			"interface": "jtag",
			"device": "STM32F103C8T6",
			"runToMain": true,
			"configFiles": [
				"interface/stlink.cfg",
				"target/stm32f1x.cfg"
			],
			"svdFile": "C:/Program Files/toolchains/SVD_STM32/STM32F103.svd",
			"preLaunchTask": "STM32 compile/program"
		}
	]
}

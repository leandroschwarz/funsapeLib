    "version": "2.0.0",
    "options": {
        "env": {
            "BUILD_DIR": "build",
            "BUILD_NAME": "application",
            "COMPILE_C_AS_CPP": "0",
            "COMPILER_DEBUG": "0",
            "COMPILER_OPT": "-Og",      // -Os
            "COMPILER_PATH": "",
            "COMPILER_STD_C": "gnu11",
            "COMPILER_STD_CPP": "c++17",
            "FUNSAPE_PATH": "none",     // "D:/Schwarz/Projects/STM32/funsapeLib/",
            "LIBRARY_PATH": "",
            "MCU_DEVICE_CORE_FLOAT_ABI": "",
            "MCU_DEVICE_CORE_FPU": "",
            "MCU_DEVICE_NAME": "STM32F103C8Tx",
            "PROGRAMMER_BAUDRATE": "57600",
            "PROGRAMMER_CONFIG_FILE": "${execPath}/../toolchains/avrdudess/avrdude.conf",
            "PROGRAMMER_PORT": "COM5",
            "PROGRAMMER_TYPE": "ST_LINK_SWD",       // arduino, ST_LINK_JTAG, ST_LINK_SWD
            "USER_DEFINES_ASM": "",
            "USER_DEFINES_C": "USE_HAL_DRIVER",
            "USER_DEFINES_CPP": "USE_HAL_DRIVER",
            "USER_FLAGS_ASM": "",
            "USER_FLAGS_C": "-Wno-switch",
            "USER_FLAGS_CPP": "-Wno-switch",
            "USER_LIBS": ""
        }
    },
    "tasks": [
        {   // STM32 compile
            "label": "STM32 compile",
            "detail": "STM32 - Compile project",
            "command": "make",
            "args": [
                {
                    "quoting": "weak",
                    "value": "compile"
                },
            ],
            "runOptions": {
                "instanceLimit": 1,
                "reevaluateOnRerun": true
            },
            "problemMatcher": [
                "$gcc"
            ],
            "type": "shell",
            "group": "build",
            "presentation": {
                "clear": true,
                "close": false,
                "echo": true,
                "focus": true,
                "panel": "shared",
                "reveal": "always",
                "revealProblems": "onProblem",
